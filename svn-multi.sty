% At the end of document the values are written to the auxiliary file.
%    \begin{macrocode}
\AtEndDocument{%
  \if@filesw
    \ifx\@svn@rev\empty\else
      \ifnum\@svn@rev<1\else
        \begingroup
        \let\protect\@unexpandable@protect
        \svn@writesvn
        \svn@writesvt
        \endgroup
      \fi
    \fi
  \fi
}
